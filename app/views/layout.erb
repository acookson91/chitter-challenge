<!DOCTYPE html>


<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <div id='header'>
      <div class='welcome'>
        <% if current_user %>
          Welcome back, <%= current_user.username %>
        <% end %>
      </div>

      <div id='logout'>
        <% if current_user %>
          <form method='post' action='/sessions'>
            <input type='hidden' name='_method' value='delete'>
            <input class='btn-signout' type='submit' value='Sign out'>
          </form>
        <% end %>
      </div>

    </div>
      <link rel="stylesheet" type="text/css" href="/style.css" />
    <span id='test'> OMG </span>

    <% if flash[:notice] %>
      <div id='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>


    <%= yield %>
  </body>




</html>
